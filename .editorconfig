[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{bash,sh}]
indent_style = tab

[*.{json,md,yaml,html,css,scss}]
indent_size = 4
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.{c,h}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

[*.ts]
indent_size = 2
indent_style = space
quote_type = single
